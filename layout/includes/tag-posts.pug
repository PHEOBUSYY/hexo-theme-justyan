if page.posts.length > 0
    #list-posts
        each post in page.posts.sort('date', -1).toArray()
            a.post-item(href=config.root + post.path)
                div
                    span.post-item-title= post.title
                    span.post-item-date= date(post.date, date_format)
                    if post.excerpt
                        span.post-item-excerpt!= post.excerpt
                    else
                        span.post-item-excerpt!= truncate(strip_html(post.content), { length: 150, omission: ' ...' })
            .post-tags
                each tag in post.tags.data
                   a(href= tag.path)
                       span.post-tag= tag.name
